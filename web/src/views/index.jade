doctype html
html(lang='en', ng-app='ML')
  head
    meta(charset='utf-8')
    title {{envVars.website_name}} - {{pageTitle}}
    link(rel='stylsheet', 
         href='http://fonts.googleapis.com/css?family=Lato:300,400,700')
    link(rel='stylesheet', href='index.css')

  body(style='overflow-x:hidden')
    .header(style='border-bottom:2px solid #999')
      include mixins/header
    .content(ng-view)
    .footer(style='padding-top:1rem;border-top:2px solid #999')
      include mixins/footer

    script(src='index.js')

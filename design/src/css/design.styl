c_emerald = rgb(46, 204, 113)
c_nephritis = rgb(39, 174, 96)
c_river = rgb(52, 152, 219)
c_belize = rgb(41, 128, 185)
c_red = rgb(231, 76, 60)
c_green = rgb(39, 174, 96)
c_orange = rgb(243, 156, 18)
c_blue = rgb(41, 128, 185)
c_grey = rgb(236, 240, 241)

body
  margin 0
  line-height 1.4
  font-size 20px
  color #444

h1
  font-weight 100

.gr
  font-size 0

[class^="grc-"]
  box-sizing border-box
  display inline-block
  vertical-align top
  overflow hidden
  margin 0
  font-size 1rem

.grc-2
  width 50%
.grc-3
  width 33.33333%
.grc-4
  width 25%

.logo
  min-height 20rem
  background center center url(../../assets/head.svg) no-repeat;
  background-cover contain

.tags
  padding 1rem
  list-style none
  font-size 0
  li
    overflow hidden
    font-size 1rem
    display inline-block
    white-space nowrap
    padding 1rem
    color #eee
    &:first-child
      background c_emerald
    &:nth-child(2)
      background c_nephritis
    &:nth-child(3)
      background c_river
    &:nth-child(4)
      background c_belize
    &:nth-child(5)
      background c_orange
    &:nth-child(6)
      background c_red
    &:nth-child(7)
      background c_grey
      color rgba(black, .6)

.heading
  background c_belize
  padding 3rem
  margin 0 0 2rem
  text-align center
  color rgba(black, .4)

@media screen and (max-width: 599px)
  .grc-2
    width 100%

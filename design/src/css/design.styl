c_emerald = rgb(46, 204, 113)
c_nephritis = rgb(39, 174, 96)
c_river = rgb(52, 152, 219)
c_belize = rgb(41, 128, 185)
c_red = rgb(231, 76, 60)
c_green = rgb(39, 174, 96)
c_orange = rgb(243, 156, 18)
c_blue = rgb(41, 128, 185)
c_grey = rgb(236, 240, 241)
c_purple = rgb(155, 89, 182)

body
  margin 0
  min-width 320px
  line-height 1.4
  font-size 20px
  color #444

h1
  font-weight 200
  text-transform uppercase

.gr
  font-size 0

[class^="grc-"]
  box-sizing border-box
  display inline-block
  vertical-align middle
  overflow hidden
  margin 0
  font-size 1rem

.grc-2
  width 50%
.grc-3
  width 33.33333%
.grc-4
  width 25%

.logo
  min-height 20rem
  background center center url(../../assets/head.svg) no-repeat;
  background-cover contain

.tags
  padding 2rem
  list-style none
  font-size 0
  text-align center
  li
    overflow hidden
    font-size 1rem
    display inline-block
    white-space nowrap
    padding 1rem
    color #eee
    &:first-child
      background c_emerald
    &:nth-child(2)
      background c_nephritis
    &:nth-child(3)
      background c_river
    &:nth-child(4)
      background c_belize
    &:nth-child(5)
      background c_orange
    &:nth-child(6)
      background c_red
    &:nth-child(7)
      background c_purple
    &.last
      display block
      color c_belize

.heading
  background c_belize
  padding 3rem
  text-align center
  color rgba(white, .6)
  h1
    color #eee

.edito
  overflow hidden
  box-sizing border-box
  padding 2rem 1rem
  max-width 40rem
  margin 0 auto

.icons
  text-align center

[class^="icon-"]
  display inline-block
  vertical-align middle
  margin 0 1rem
  width 96px
  height 96px
  background-position center center
  background-size contain
  background-repeat no-repeat

.icon-heart
  background-image url('../../assets/icon-heart.svg')

.icon-network
  background-image url('../../assets/icon-network.svg')

.icon-graph
  background-image url('../../assets/icon-graph.svg')

.icon-human
  background-image url('../../assets/icon-human.svg')

p:first-child
  margin-top 0
p:last-child
  margin-bottom 0

.loader
  background center center url('../../assets/loader.gif') no-repeat
  background-size contain
  height 6rem

.c_river
  background c_river
  color rgba(white, .65)

.snap-container
  position relative
  padding-bottom 56.25%
  height 0
  m

#snap
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  min-width 320px

@media screen and (max-width: 599px)
  .grc-2
    width 100%
